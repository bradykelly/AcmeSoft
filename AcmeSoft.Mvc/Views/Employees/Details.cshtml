@using AcmeSoft.Mvc.Models
@model AcmeSoft.Mvc.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h3>@Model.ViewHeading</h3>
<hr />
<form asp-action="Create">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeNum" class="control-label"></label>
                @if (Model.ModelPurpose == ViewModelPurpose.Create)
                {
                    <input asp-for="EmployeeNum" class="form-control" />
                }
                else
                {
                    <input asp-for="EmployeeNum" class="form-control" readonly="readonly" />
                }
                <span asp-validation-for="EmployeeNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployedDate" class="control-label"></label>
                <input type="text" asp-for="EmployedDate" class="form-control has-date-picker" />
                <span asp-validation-for="EmployedDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input type="text" asp-for="BirthDate" class="form-control has-date-picker" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TerminatedDate" class="control-label"></label>
                <input type="text" asp-for="TerminatedDate" class="form-control has-date-picker" />
                <span asp-validation-for="TerminatedDate" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group text-right">
        <input type="submit" value="Submit" class="btn btn-default" />
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
