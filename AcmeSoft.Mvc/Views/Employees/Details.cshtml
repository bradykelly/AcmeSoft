@using AcmeSoft.Mvc.Models
@model AcmeSoft.Mvc.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h3>@Model.ViewHeading</h3>
<hr />
<form asp-action="@Model.FormAction">
    <div class="row">
        @if (Model.ModelPurpose == ViewModelPurpose.Create || Model.ModelPurpose == ViewModelPurpose.Edit)
        {
            <p class="date-prompt">* Click inside the date fields to show a date selector.</p>
        }
        @if (Model.ModelPurpose == ViewModelPurpose.Delete)
        {
            <p class="delete-prompt">Are you sure you want to delete this employee?</p>
        }
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId"/>
            <input type="hidden" asp-for="PersonId"/>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" tabindex="1"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" tabindex="2"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdNumber" class="control-label"></label>
                <input asp-for="IdNumber" class="form-control" tabindex="2"/>
                <span asp-validation-for="IdNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeNum" class="control-label"></label>
                @if (Model.ModelPurpose == ViewModelPurpose.Create)
                {
                    <input asp-for="EmployeeNum" class="form-control" tabindex="3"/>
                }
                else
                {
                    <input asp-for="EmployeeNum" class="form-control" tabindex="3" readonly="readonly"/>
                }
                <span asp-validation-for="EmployeeNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployedDate" class="control-label"></label> *
                <input type="text" asp-for="EmployedDate" class="form-control has-date-picker" tabindex="5"/>
                <span asp-validation-for="EmployedDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">

            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input type="text" asp-for="BirthDate" class="form-control has-date-picker" tabindex="4"/>
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TerminatedDate" class="control-label"></label>
                <input type="text" asp-for="TerminatedDate" class="form-control has-date-picker" tabindex="6"/>

            </div>
        </div>
    </div>
    <div class="form-group text-right">
        <input type="submit" value="Submit" class="btn btn-default" tabindex="7" />
        <a asp-action="Index" class="btn btn-default" tabindex="8">Cancel</a>
    </div>
</form>


