@using AcmeSoft.Mvc.Models
@model AcmeSoft.Mvc.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h3>@Model.ViewHeading</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonId" class="control-label"></label>
                <input asp-for="PersonId" class="form-control" />
                <span asp-validation-for="PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeNum" class="control-label"></label>
                @if (Model.ModelPurpose == ViewModelPurpose.Create)
                {
                    <input asp-for="EmployeeNum" class="form-control"/>
                }
                else
                {
                    <input asp-for="EmployeeNum" class="form-control" readonly="readonly" />
                }
                <span asp-validation-for="EmployeeNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployedDate" class="control-label"></label>
                <input asp-for="EmployedDate" class="form-control" />
                <span asp-validation-for="EmployedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TerminatedDate" class="control-label"></label>
                <input asp-for="TerminatedDate" class="form-control" />
                <span asp-validation-for="TerminatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
                <a asp-action="Index" class="btn btn-default">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
