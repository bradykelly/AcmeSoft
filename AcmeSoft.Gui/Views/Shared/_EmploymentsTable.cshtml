@model AcmeSoft.Gui.ViewModels.EmploymentIndexViewModel

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HeaderItem.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeaderItem.EmployedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeaderItem.TerminatedDate)
            </th>
            <th>
                <button id="addEmpButton" type="button" class="btn btn-primary btn-sm">Create New</button>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr data-emp_id="@item.EmployeeId">
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TerminatedDate)
                </td>
                <td>
                    <a href="" class="editEmp">Edit</a> |
                    @Html.ActionLink("Delete", "Delete", new {id = item.EmployeeId})
                </td>
            </tr>
        }
    </tbody>
</table>
