@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            switch ($("#ModelPurpose").val()) {
                case "Create":
                    $("#empNumDiv").addClass("hidden");
                    $("#addEmpButton").addClass("hidden");
                    break;
                case "Delete":
                    $("input").attr("readonly", "readonly");
                    break;
            }


        });
    </script>
